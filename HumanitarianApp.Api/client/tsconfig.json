{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*",
    "react-app.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
